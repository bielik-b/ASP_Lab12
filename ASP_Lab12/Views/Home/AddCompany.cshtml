@{
    ViewData["Title"] = "Add company";
}
@model string
<html>
<head>
    <title>
        @ViewData["Title"]
    </title>
</head>
<body>
    <div class="text-center">
        <h2 class="display-4">Add company</h2>
        <form method="post" style="width: 25%; margin:auto">
            <div class="form-group">
                <label>Company's name</label>
                <input type="text" class="form-control" name="name" />
            </div>
            <div class="form-group">
                <label>Company's country</label>
                <input type="text" class="form-control" min="0" name="country" />
            </div>
            <button type="submit" class="btn btn-outline-primary">Add</button>
        </form>
        <p class="text-success">@Model</p>
    </div>
</body>
</html>

